<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.ui_Admin.Ges_Per.Consultas">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarConsultas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_encabezado"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="28dp"
            android:paddingEnd="24dp"
            android:paddingBottom="28dp">

            <ImageView
                android:id="@+id/iconConsultas"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/degradado_an_btn"
                android:padding="14dp"
                android:src="@drawable/buscar"
                app:tint="@color/text_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título y estadísticas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/iconConsultas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconConsultas"
                app:layout_constraintTop_toTopOf="@id/iconConsultas">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="CONSULTAS DE PERSONAL"
                    android:textColor="@color/text_white"
                    android:textSize="22sp"
                    android:letterSpacing="0.06"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTotalRegistros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:text="0 registros encontrados"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:alpha="0.9" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ========== CONTENIDO PRINCIPAL CON SCROLL ========== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarConsultas">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ========== CARD DE BÚSQUEDA Y FILTROS ========== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBusqueda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="BÚSQUEDA DE PERSONAL"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        android:letterSpacing="0.12"
                        android:alpha="0.6"
                        android:textStyle="bold" />

                    <!-- Campo de búsqueda general -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutBusqueda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Buscar por nombre o matrícula"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/accent_blue"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/text_secondary"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/buscar"
                        app:startIconTint="@color/color_end">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editBusqueda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="text"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Filtros expandibles -->
                    <LinearLayout
                        android:id="@+id/layoutFiltrosExpandible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Filtro por Estado -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Estado"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipTodos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="Todos"
                                android:textSize="12sp"
                                app:chipBackgroundColor="@color/accent_blue"
                                app:chipStrokeWidth="0dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipActivos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activos"
                                android:textSize="12sp"
                                app:chipBackgroundColor="@color/success_green"
                                app:chipStrokeWidth="0dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipInactivos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactivos"
                                android:textSize="12sp"
                                app:chipBackgroundColor="@color/error_red"
                                app:chipStrokeWidth="0dp" />

                        </com.google.android.material.chip.ChipGroup>

                        <!-- Filtro por Rol -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Rol"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerRol"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/entrada_texto"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                        <!-- Filtro por Desempeño -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Rango de Desempeño"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textRangoMin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="0%"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />

                            <com.google.android.material.slider.RangeSlider
                                android:id="@+id/rangeSliderDesempeno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:valueFrom="0"
                                android:valueTo="100"
                                app:labelBehavior="gone"
                                app:thumbColor="@color/accent_blue"
                                app:trackColorActive="@color/accent_blue"
                                app:trackColorInactive="@color/text_secondary"
                                />

                            <TextView
                                android:id="@+id/textRangoMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="100%"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botón para expandir/colapsar filtros -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnToggleFiltros"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/boton_secundario"
                        android:fontFamily="sans-serif-medium"
                        android:text="Mostrar Filtros"
                        android:textColor="@color/color_end"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Botón Buscar -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnBuscar"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/boton_principal"
                        android:elevation="3dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Buscar Personal"
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========== RESULTADOS DE BÚSQUEDA ========== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResultados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardBusqueda">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_diversity_3_24"
                            app:tint="@color/accent_blue" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Resultados"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerResultados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_personal" />

                    <!-- Mensaje cuando no hay resultados -->
                    <LinearLayout
                        android:id="@+id/layoutSinResultados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:alpha="0.3"
                            android:src="@drawable/baseline_apps_24"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="No se encontraron registros"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="Intenta con otros criterios de búsqueda"
                            android:textAlignment="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>