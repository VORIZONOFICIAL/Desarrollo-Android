<?xml version="1.0" encoding="utf-8"?>
<!-- Item para seleccionar bloques en el dialog -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Icono -->
        <ImageView
            android:id="@+id/iconBloqueSeleccionable"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/pill_blue"
            android:padding="7dp"
            android:src="@drawable/ic_clock"
            android:tint="@color/text_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del Bloque -->
        <TextView
            android:id="@+id/textNombreBloqueSeleccionable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconBloqueSeleccionable"
            app:layout_constraintTop_toTopOf="@id/iconBloqueSeleccionable"
            tools:text="Laboratorio de Desarrollo de Software" />

        <!-- InformaciÃ³n del bloque -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconBloqueSeleccionable"
            app:layout_constraintTop_toBottomOf="@id/textNombreBloqueSeleccionable">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_building"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/textAreaBloqueSeleccionable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="LABORATORIO II" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_clock"
                app:tint="@color/success_green" />

            <TextView
                android:id="@+id/textHorarioBloqueSeleccionable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="08:00 - 14:00" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
