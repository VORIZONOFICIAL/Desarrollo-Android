<?xml version="1.0" encoding="utf-8"?>
<!-- Item de Dispositivo para RecyclerView -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Nombre del Dispositivo -->
        <TextView
            android:id="@+id/textNombreDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Lector Puerta Principal"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descripción del Dispositivo -->
        <TextView
            android:id="@+id/textDescripcionDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:text="Lector biométrico para control de acceso"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Área Asignada y Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Badge de Área -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/pill_blue"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="13dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_building"
                    app:tint="@color/background_card" />

                <TextView
                    android:id="@+id/textNombreArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="Recursos Humanos"
                    android:textColor="@color/background_card"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ubicación del Área -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/textUbicacionArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="Edificio A - Piso 3"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Badge de Estado -->
        <TextView
            android:id="@+id/badgeEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_registro_verde"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="Activo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditarDispositivo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/boton_principal_v2"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Editar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEliminarDispositivo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/boton_eliminar"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Eliminar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
