<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.ui_Admin.Ajustes.Ajustes_G_H_C">

        <!-- Encabezado con gradiente NARANJA -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_encabezado"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <!-- Badge Gestión de Roles y Permisos - Debajo del logo -->
                    <LinearLayout
                        android:id="@+id/badgeRoles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/insignia"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="16dp"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01"
                            android:text="Gestión de Horario y Calendario"
                            android:textColor="@color/primary_orange"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Tabs de Navegación -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutGestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/tarjeta"
            android:elevation="4dp"
            app:tabIndicatorColor="@color/primary_orange"
            app:tabSelectedTextColor="@color/primary_orange"
            app:tabTextColor="@color/text_secondary"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloques" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendarios" />
        </com.google.android.material.tabs.TabLayout>

        <!-- ViewPager2 para contenido de las tabs -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerGestion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayoutGestion" />

</androidx.constraintlayout.widget.ConstraintLayout>