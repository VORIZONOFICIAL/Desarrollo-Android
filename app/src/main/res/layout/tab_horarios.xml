<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_light"
    android:padding="24dp">

    <!-- Título: Crear Horario -->
    <TextView
        android:id="@+id/textTituloHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.02"
        android:text="Crear Horario Semanal"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card: Datos del Horario -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDatosHorario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTituloHorario">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Nombre del Horario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Nombre del Horario"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/entrada_texto"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingEnd="14dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/baseline_assignment_24"
                    app:tint="@color/primary_orange" />

                <EditText
                    android:id="@+id/editNombreHorario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:hint="Ej: Horario Regular Enero"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Descripción"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/entrada_texto"
                android:gravity="top"
                android:minHeight="80dp"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingEnd="14dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_assignment_24"
                    app:tint="@color/primary_orange" />

                <EditText
                    android:id="@+id/editDescripcionHorario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:hint="Descripción del horario"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="3"
                    android:maxLines="5"
                    android:minLines="2"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Título: Tabla de Horario Semanal -->
    <TextView
        android:id="@+id/textTituloTabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.02"
        android:text="Asignar Bloques por Día"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDatosHorario" />

    <!-- HorizontalScrollView para la tabla -->
    <HorizontalScrollView
        android:id="@+id/scrollViewTabla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTituloTabla">

        <!-- Tabla de días de la semana -->
        <TableLayout
            android:id="@+id/tableHorarioSemanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="@android:color/white"
            android:padding="8dp">

            <!-- Encabezado de días -->
            <TableRow
                android:background="@drawable/boton_principal"
                android:padding="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Lunes"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Martes"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Miércoles"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Jueves"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Viernes"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Sábado"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:padding="8dp"
                    android:text="Domingo"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />
            </TableRow>

            <!-- Fila de celdas para agregar bloques -->
            <TableRow
                android:padding="4dp">

                <!-- Lunes -->
                <LinearLayout
                    android:id="@+id/cellLunes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerLunes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Martes -->
                <LinearLayout
                    android:id="@+id/cellMartes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMartes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Miércoles -->
                <LinearLayout
                    android:id="@+id/cellMiercoles"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMiercoles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Jueves -->
                <LinearLayout
                    android:id="@+id/cellJueves"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerJueves"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Viernes -->
                <LinearLayout
                    android:id="@+id/cellViernes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViernes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Sábado -->
                <LinearLayout
                    android:id="@+id/cellSabado"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSabado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Domingo -->
                <LinearLayout
                    android:id="@+id/cellDomingo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/borde_celda"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/primary_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Agregar"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDomingo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

    <!-- Botón Guardar Horario -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardarHorario"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_principal"
        android:elevation="4dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:text="Guardar Horario"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollViewTabla" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
