<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    tools:context=".ui.ui_Admin.Ges_Per.alta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <!-- ========== ENCABEZADO ========== -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarAlta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_encabezado"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingTop="28dp"
                android:paddingEnd="24dp"
                android:paddingBottom="28dp">

                <!-- Icono principal -->
                <ImageView
                    android:id="@+id/iconAlta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_assignment_ind_24"
                    android:tint="@color/text_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Título -->
                <TextView
                    android:id="@+id/textTituloAlta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="ALTA DE PERSONAL"
                    android:textColor="@color/text_white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iconAlta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iconAlta"
                    app:layout_constraintTop_toTopOf="@id/iconAlta" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- ========== FORMULARIO DE ALTA ========== -->
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/cardFormularioAlta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbarAlta">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- ========== SECCIÓN: MATRÍCULA ========== -->
                <TextView
                    android:id="@+id/textSeccionMatricula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Matrícula"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- PK Matrícula -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutMatricula"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Matrícula del empleado"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/baseline_account_circle_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editMatricula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: INFORMACIÓN PERSONAL ========== -->
                <TextView
                    android:id="@+id/textSeccionPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Información Personal"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutNombre"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Nombre(s)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Apellido Paterno -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutApellidoPaterno"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Apellido Paterno"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editApellidoPaterno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Apellido Materno -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutApellidoMaterno"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Apellido Materno (Opcional)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editApellidoMaterno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Alta -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutFechaAlta"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Fecha de Alta"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:endIconTint="@color/accent_blue"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editFechaAlta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="none"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: IDENTIFICACIÓN OFICIAL ========== -->
                <TextView
                    android:id="@+id/textSeccionIdentificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Identificación Oficial"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- RFC -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutRFC"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="RFC (13 caracteres)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/baseline_assignment_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editRFC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textCapCharacters"
                        android:maxLength="13"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- CURP -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCURP"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="CURP (18 caracteres)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/baseline_assignment_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCURP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textCapCharacters"
                        android:maxLength="18"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: INFORMACIÓN DE CONTACTO ========== -->
                <TextView
                    android:id="@+id/textSeccionContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Información de Contacto"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Teléfono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutTelefono"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Teléfono (10 dígitos)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:prefixText="+52 "
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Correo Electrónico -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCorreo"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Correo Electrónico"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: DIRECCIÓN ========== -->
                <TextView
                    android:id="@+id/textSeccionDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Dirección"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Calle -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCalle"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Calle y Número"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textPostalAddress"
                        android:maxLength="150"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Código Postal -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCodigoPostal"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Código Postal (5 dígitos)"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCodigoPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: INFORMACIÓN LABORAL ========== -->
                <TextView
                    android:id="@+id/textSeccionLaboral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Información Laboral"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Tipo de Contrato -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutTipoContrato"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Tipo de Contrato"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/baseline_assignment_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTipoContrato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre de Usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutNombreUsuario"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Nombre de Usuario"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:startIconDrawable="@drawable/baseline_account_circle_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutContrasena"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Contraseña"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/baseline_account_circle_24"
                    app:startIconTint="@color/accent_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textPassword"
                        android:maxLength="100"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ========== SECCIÓN: ROL Y CALENDARIO ========== -->
                <TextView
                    android:id="@+id/textSeccionAsignaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Asignaciones"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Botón Asignar Rol -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAsignarRol"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/boton_secundario"
                    android:drawableStart="@drawable/baseline_diversity_3_24"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/text_primary"
                    android:fontFamily="sans-serif-black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Asignar Rol"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- TextView para mostrar el Rol seleccionado -->
                <TextView
                    android:id="@+id/textRolSeleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/entrada_texto"
                    android:drawableStart="@drawable/baseline_diversity_3_24"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/success_green"
                    android:fontFamily="sans-serif-medium"
                    android:padding="14dp"
                    android:text="Ningún rol asignado"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <!-- Botón Asignar Calendario -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAsignarCalendario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/boton_secundario"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/text_primary"
                    android:fontFamily="sans-serif-black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Asignar Calendario"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- TextView para mostrar el Calendario seleccionado -->
                <TextView
                    android:id="@+id/textCalendarioSeleccionado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/entrada_texto"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/success_green"
                    android:fontFamily="sans-serif-medium"
                    android:padding="14dp"
                    android:text="Ningún calendario asignado"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <!-- ========== SECCIÓN: ESTADO DEL EMPLEADO ========== -->
                <TextView
                    android:id="@+id/textSeccionEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Estado del Empleado"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Switch Estado Activo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/tarjeta"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconEstadoActivo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_assignment_turned_in_24"
                        android:tint="@color/success_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Empleado Activo"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="Puede registrar asistencias y acceder al sistema"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchActivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ========== BOTONES DE ACCIÓN ========== -->
        <LinearLayout
            android:id="@+id/layoutBotonesAlta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFormularioAlta">

            <!-- Botón Cancelar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelarAlta"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/boton_secundario"
                android:fontFamily="sans-serif-black"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Botón Registrar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegistrarAlta"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/boton_principal"
                android:fontFamily="sans-serif-black"
                android:text="Registrar Personal"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>