<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra capa 1 -->
    <item 
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#05000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Sombra capa 2 -->
    <item 
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Sombra capa 3 -->
    <item 
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Tarjeta principal con borde -->
    <item 
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card"/>
            <corners android:radius="20dp"/>
            <stroke 
                android:width="0.5dp" 
                android:color="#E0E0E0"/>
        </shape>
    </item>
    <!-- Brillo superior -->
    <item 
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#08FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
