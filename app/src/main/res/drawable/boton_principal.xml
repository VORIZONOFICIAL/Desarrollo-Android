<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_orange_light">
    <item>
        <layer-list>
            <!-- Gradiente del botÃ³n -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_orange"
                        android:centerColor="@color/primary_orange_dark"
                        android:endColor="#E85D2C"
                        android:angle="135"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- Brillo superior -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#30FFFFFF"
                        android:centerColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
